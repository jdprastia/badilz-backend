<div class="left-arrow mb-3">
    <a href="/admin/project"><i class="fas fa-arrow-left"></i></a>
</div>
<div class="card shadow mb-4 mt-2">
    <div class="card-body">
        <form action="/admin/project/<%= project._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Title of Project :</label>
                <input type="text" class="form-control" name="name" value="<%= project.name %>" placeholder="Enter Title of Project" required>
            </div>
            <div class="form-group">
                <label for="year">Year :</label>
                <input type="number" class="form-control" name="year" value="<%= project.year %>" placeholder="Enter Year" required>
            </div>
            <div class="form-group">
                <label for="description">Description :</label>
                <textarea type="text" name="description" class="form-control" cols="30" rows="3" placeholder="Enter Description" required><%= project.description %></textarea>
            </div>
            <div class="form-group">
                <label for="name">Image :</label>
                <input type="file" class="form-control" name="image">
            </div>
            <div class="form-footer">
                <input type="hidden" class="id" name="id" value="<%= project._id %>">
                <button type="submit" class="btn btn-primary">Update</button>
            </div> 
            <div class="form-group">
                <label>Image now :</label>
                <div class="row">
                    <div class="col-sm-4">
                        <img src="https://app-badilz.herokuapp.com/<%- project.imageUrl %>" alt="image-<%= project.id %>" style="width: 100%; height: 300px; object-fit: cover;">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>