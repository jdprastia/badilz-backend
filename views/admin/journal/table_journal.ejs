<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <a class="btn btn-primary bg-dark" href="/admin/add-journal">
      <i class="fas fa-plus"></i>
    </a>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>No</th>
            <th>Year</th>
            <th>Title</th>
            <th>Category</th>
            <th>Journal Quote</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < journal.length; i++) { %>

            <tr>
              <td><%= i + 1 %>.</td>
              <td><%= journal[i].year %></td>
              <td><%= journal[i].title %></td>
              <td><%= journal[i].categoryId.name %></td>
              <td><%= journal[i].journalQuote %></td>
              <td>
                <form action="/admin/journal/<%= journal[i].id %>?_method=DELETE" method="POST">
                  <a 
                    href="/admin/journal/<%= journal[i].id %>"
                    class="btn btn-grey btn-circle btn-sm button-update"
                  >
                    <i class="fas fa-edit"></i>
                  </a>
                  <button type="button" class="btn btn-danger btn-circle btn-sm" data-toggle="modal" data-target="#exampleModal-<%= journal[i]._id %>">
                    <i class="fas fa-trash"></i>
                  </button>
                  
                  <!-- Modal -->
                  <div class="modal fade" id="exampleModal-<%= journal[i]._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          Are you sure want to delete this?
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                          <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                      </div>
                    </div>
                  </div>

                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  